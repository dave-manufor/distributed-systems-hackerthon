{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "{{ .Release.Name }}-web-deployment",
    "labels": {
      "app": "{{ .Release.Name }}-web"
    },
    "annotations": {
      "prometheus.io/scrape": "true",
      "prometheus.io/port": "80",
      "prometheus.io/path": "/metrics",
      "prometheus.io/component": "web"
    }
  },
  "spec": {
    "replicas": {{.Values.web.replicas}},
    "selector": {
      "matchLabels": {
        "app": "web"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "{{ .Release.Name }}-web"
        },
        "annotations": {
          "prometheus.io/scrape": "true",
          "prometheus.io/port": "80",
          "prometheus.io/path": "/metrics",
          "prometheus.io/component": "web"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "secrets",
            "secret": {
              "secretName": "web-secret-api"
            }
          }
        ],
        "containers": [
          {
            "name": "web",
            "image": "{{.Values.web.images.repository}}:{{.Values.web.images.tag}",
            "ports": [
              {
                "containerPort": 80,
                "name": "web-http-port"
              }
            ],
            "env": [
              {
                "name": "Widgetario__Theme",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "web-config",
                    "key": "theme"
                  }
                }
              }
            ],
            "volumeMounts": [
              {
                "name": "secrets",
                "mountPath": "/app/secrets",
                "readOnly": true
              }
            ],
            {{- if .Values.web.resources.enabled}}
            "resources": {
              "requests": { "cpu": "{{.Values.web.resources.requests.cpu}}", "memory": "{{.Values.web.resources.requests.memory}}" },
              "limits": { "cpu": "{{.Values.web.resources.limits.cpu}}", "memory": "{{.Values.web.resources.limits.memory}}" }
            },
            {{- end }}
            "readinessProbe": {
              "httpGet": {
                "path": "/",
                "port": 80
              },
              "initialDelaySeconds": 25,
              "periodSeconds": 10
            },
            "livenessProbe": {
              "httpGet": {
                "path": "/",
                "port": 80
              },
              "initialDelaySeconds": 10,
              "periodSeconds": 10
            }
          }
        ]
      }
    }
  }
}
